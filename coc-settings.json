{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        },
        "fortran" : {
            "command": "fortls",
            "filetypes": ["fortran"],
            "rootPatterns": [".fortls", ".git/"]
        }
    },
    "explorer.position": "left",
    "explorer.width": 20,
    "explorer.sources": [
        {
            "name": "buffer",
            "expand": true
        },
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.keyMappings.global": {
        "i": false, // cancle default mapkey
        "k": "nodePrev",
        "j": "nodeNext",
        "?": "help",
        "y": "copyFilename",
        "Y": "copyFilePath",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",
        "e": "open",
        "E": "openInVsplit",
        "f": "search",
        "q": "quit"
    },
    "suggest.noselect": true
}
